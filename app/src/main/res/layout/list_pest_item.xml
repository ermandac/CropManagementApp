<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header with Icon and Pest Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/pest_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_category_pest"
                    android:contentDescription="Pest Icon"
                    android:tint="#FF5722" />

                <TextView
                    android:id="@+id/pest_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Pest Name"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <!-- Scientific Name -->
            <TextView
                android:id="@+id/scientific_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Scientific name"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray" />

            <!-- Category Badge -->
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Insect"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/circle"
                android:padding="6dp"
                android:textStyle="bold" />

            <!-- Affected Crops -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Affected Crops:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/affected_crops"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Crop list"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary" />

            <!-- Symptoms -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Symptoms:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/symptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Symptoms will appear here"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <!-- Control Methods -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Control Methods:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/control_methods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Control methods will appear here"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <!-- Prevention Tips -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Prevention:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/prevention_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Prevention tips will appear here"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <!-- Common Season -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Common Season: "
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/common_season"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year-round"
                    android:textSize="14sp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Severity Badge -->
            <TextView
                android:id="@+id/severity_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="High"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_orange_dark"
                android:padding="8dp"
                android:textStyle="bold"
                android:layout_gravity="end" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
