<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Name and Type Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_organic_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Organic Item Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tv_organic_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Method"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Category -->
        <TextView
            android:id="@+id/tv_organic_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Category: Composting"
            android:textSize="12sp"
            android:textColor="#666666"
            android:drawableStart="@android:drawable/ic_menu_compass"
            android:drawablePadding="6dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_organic_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Brief description of the organic farming technique..."
            android:textSize="13sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Materials Count (if applicable) -->
        <TextView
            android:id="@+id/tv_organic_materials_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="3 materials required"
            android:textSize="11sp"
            android:textColor="#888888"
            android:drawableStart="@android:drawable/ic_menu_info_details"
            android:drawablePadding="4dp" />

        <!-- Duration -->
        <TextView
            android:id="@+id/tv_organic_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Duration: 2-3 weeks"
            android:textSize="11sp"
            android:textColor="#888888"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="4dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:background="#EEEEEE" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btn_edit_organic"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Edit"
                android:textSize="12sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_delete_organic"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Delete"
                android:textSize="12sp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#E57373"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
