<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.cma.thesis.cropmanagementapp.Activity_CreatePlannerActivity">

    <Button
        android:id="@+id/btnCreatePlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Plan"
        android:textSize="16sp"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Planting Method"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

    <RadioGroup
        android:id="@+id/radioGroupPlantingMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <RadioButton
            android:id="@+id/radioSabongTanim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabog Tanim (Direct Seeding)"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioLipatTanim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lipat Tanim (Transplanting)" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/checkboxNotifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Notifications"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:checked="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crop Plans"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp" />

        <ListView
            android:id="@+id/listProcedure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</LinearLayout>
